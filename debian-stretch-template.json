{
  "description": "Vanilla Debian Stretch base box",
  "variables": {
    "box_version": "9.2.1",
    "box_changelog": "* Stretch update 2 patch 1",
    "output_dir": "stretch.build",
    "format": null
    },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/stretch-preseed.cfg <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=localdomain <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "kbd-chooser/method=us <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "net.ifnames=0 <wait>",
        "<enter><wait>"
      ],
      "disk_size": "5120",
      "disk_interface": "virtio",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "ec78bc48b48d676775b60eda41528ec33c151c2ce7414a12b13d9b73d34de544",
      "iso_checksum_type": "sha256",
      "iso_url": "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-9.2.1-amd64-netinst.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "ansible",
      "ssh_username": "ansible",
      "ssh_port": "22",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "qemuargs": [[ "-m", "1024M" ],[ "-smp", "2" ]],
      "vm_name": "debian-stretch-template.{{ user `format` }}",
      "output_directory": "{{user `output_dir`}}",
      "format": "{{ user `format` }}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "5s",
      "execute_command": "echo 'ansible'| {{.Vars}} sudo --preserve-env --stdin sh '{{.Path}}'",
      "scripts": [
        "scripts/ansible-setup",
        "scripts/cleanup",
        "scripts/custom-firstboot"
      ]
    }
  ]
}
